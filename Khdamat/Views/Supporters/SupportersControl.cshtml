@model List<Khdamat.Models.SupportersDetails>
@using Microsoft.AspNetCore.Http;
@using System.Globalization

@{
    ViewData["Title"] = "workersControl";
}

<h2 class="makeflex">التحكم في السابورترز</h2>
<hr />


    @foreach (var item in Model)
   {


    <div>
        <div class="makeflex">
            <p class="rigthTitle">الاسم الاول:</p>
            <p class="leftInfo">@item.supporter.First_Name</p>
        </div>
        <div class="makeflex">
            <p class="rigthTitle">الاسم الاخير:</p>
            <p class="leftInfo">@item.supporter.Last_Name</p>
        </div>
        <div class="makeflex">
            <p class="rigthTitle">البريد الالكتروني:</p>
            <p class="leftInfo">@item.supporter.Supporter_Email</p>
        </div>
        <div class="makeflex">
            <p class="rigthTitle">الرقم القومي:</p>
            <p class="leftInfo">@item.supporter.Natoinal_ID</p>
        </div>
        <div class="makeflex">
            <p class="rigthTitle">البلد:</p>
            <p class="leftInfo">@item.supporter.Country</p>
        </div>
        <div class="makeflex">
            <p class="rigthTitle">المدينة:</p>
            <p class="leftInfo">@item.supporter.City</p>
        </div>
        <div class="makeflex">
            <p class="rigthTitle">الشارع:</p>
            <p class="leftInfo">@item.supporter.Street</p>
        </div>
        <div class="makeflex">
            <p class="rigthTitle">رقم الهاتف:</p>
            <p class="leftInfo">@item.supporter.Phone</p>
        </div>

        <div class="makeflex">
            <p class="rigthTitle">النوع:</p>
            <p class="leftInfo">@item.supporter.Gender</p>
        </div>
        <div class="makeflex">
            <p class="rigthTitle">تاريخ الميلاد:</p>
            <p class="leftInfo">@item.supporter.Birth_Date.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)</p>
        </div>
        <div class="makeflex">
            <p class="rigthTitle"> الادمن الى وظفه:</p>
            <p class="leftInfo">@item.supporter.Admin_ID</p>
        </div>

        @if (item.isAdmin == false)
        {
            <div class="makeflex">
                @if (Context.Session.GetInt32("isAdmin") == 1)
                {
                    <a class="btn-primary defultbutton rightButton" href=@Url.Action("protoAdmin","Supporters",item.supporter)>خليه ادمن</a>
                }
                 @if (Context.Session.GetInt32("isAdmin") == 1)
                {
                    <a class="btn-primary defultbutton leftButton" href=@Url.Action("demofromsupporter","Supporters",item.supporter)>شيل منه السابورت</a>
                }
                @if (item.isBlocked == false)
                {
                    <a class="btn-primary defultbutton leftButton" href="@Url.Action("BlockSupporter","Supporters", item.supporter)">بلوك</a>
                }

                @if (item.isBlocked == true)
                {
                    <a class="btn-primary defultbutton leftButton" href="@Url.Action("UNBlockSupporter","Supporters", item.supporter)">ازل البلوك</a>
                }

            </div>
        }

        @if (item.isAdmin == true)
        {
        <div class="makeflex">
            <p class="rigthTitle">ادمن</p>
        </div>
         }

        </div>
        <hr />
    }


    
       
