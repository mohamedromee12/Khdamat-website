@model Khdamat.Models.Review
@{
    ViewData["Title"] = "makeReview";
}

<div class="row">
    <div class="col-md-4 register">
        @using (Html.BeginForm())
        {

            @Html.AntiForgeryToken()


            <h4 class="makeflex">ريفيو</h4>
            <hr />

            @Html.TextAreaFor(model => model.Description, new { @class = "form-control height200 fullWidth", placeholder = "تفاصيل الريفيو" })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            <br>

            <div class="makeflex">
                <p class="rightTitle" style="color:black">تقييم</p>
                <div class="leftInfo" style="width:60%">
                    <select asp-for="Rating" style="width: 100%; border-color: #ced4da; ">

                        <option value=1>1</option>
                        <option value=2>2</option>
                        <option value=3>3</option>
                        <option value=4>4</option>
                        <option value=5>5</option>


                    </select>
                </div>
            </div>

            <div class="center">
                <input type="submit" value="ارسال" class="ersal center defultbutton rightButton" />
            </div>



        }
    </div>
</div>
