@model Khdamat.Models.Account

@{
    ViewData["Title"] = "changePassword";
}

<div class="row">
    <div class="col-md-4 Login register">

     

        <form asp-action="changePassword">
            <h2 class="makeflex graycolor logofont">خدمات</h2>
            <h2 class="makeflex">تغيير كلمة المرور</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

               @if (TempData["AlertMessage"] != null)
                {
                    <div class="alert alert-danger" >
                        @TempData["AlertMessage"]
                    </div>
                }


            <div class="form-group">
               
                <input asp-for="CurrentPassword" class="form-control" placeholder="كلمة المرور الحالية" />
                <span asp-validation-for="CurrentPassword" class="text-danger makeflex"></span>
            </div>

            <div class="form-group">
               
                <input asp-for="Password" class="form-control" placeholder="كلمة المرور الجديدة" />
                <span asp-validation-for="Password" class="text-danger makeflex"></span>
            </div>

            <div class="form-group">
               
                <input asp-for="ConfirmPassword" class="form-control" placeholder="تاكييد كلمة المرور الجديدة" />
                <span asp-validation-for="ConfirmPassword" class="text-danger makeflex"></span>
            </div>

            <div class="form-group center">
                <input type="submit" value="تغيير" class="btn btn-primary defultbutton" />
            </div>


        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

