@model Khdamat.Models.Account

@{
    ViewData["Title"] = "Register";
}

@*<h1>Register</h1>

<h4>Account</h4>*@
@*<hr />*@
<div class="row">
    <div class="col-md-4 register">
        <form asp-action="Register">
            <h2 class="makeflex graycolor logofont">خدمات</h2>
            <h2 class="makeflex">انشاء حساب جديد</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">


                @if (TempData["AlertMessage"] != null)
                {
                    <div class="alert alert-danger" >
                        @TempData["AlertMessage"]
                    </div>
                }

                @*<label asp-for="Email" class="control-label">البريد الاكتروني</label>*@
                <input asp-for="Email" class="form-control" placeholder="البريد الالكتروني" />
                <span asp-validation-for="Email" class="text-danger makeflex"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Password" class="control-label">كلمة المرور</label>*@
                <input asp-for="Password" class="form-control" placeholder="كلمة المرور"/>
                <span asp-validation-for="Password" class="text-danger makeflex"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="ConfirmPassword" class="control-label">تاكيد كلمة المرور</label>*@
                <input asp-for="ConfirmPassword" class="form-control" placeholder="تاكيد كلمة المرور"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger makeflex"></span>
            </div>
            <div class="typeofuser">
                <div class="form-group form-check">
                    <label class="form-check-label makeflex ">

                        <div><input class="form-check-input" value = "true" asp-for="IsWorker" /></div>
                        <div class="marginright">عامل</div>
                        @*@Html.DisplayNameFor(model => model.IsWorker)*@
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label makeflex ">

                        <div> <input class="form-check-input" value = "true" asp-for="IsClient" /></div>
                        <div class="marginright">زبون</div>

                        @*@Html.DisplayNameFor(model => model.IsClient)*@
                    </label>
                </div>
            </div>
            <div class="form-group center">
                <input type="submit" value="استكمال" class="btn btn-primary defultbutton" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
