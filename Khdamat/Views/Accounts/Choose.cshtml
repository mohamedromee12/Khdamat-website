@model Khdamat.Models.Account

@{
    ViewData["Title"] = "Choose";
}

<div class="row">
    <div class="col-md-4 Choose register">
        <form asp-action="Choose">
            <h2 class="makeflex graycolor logofont">خدمات</h2>
            <h2 class="makeflex">انشاء حساب جديد</h2>
            <hr />
